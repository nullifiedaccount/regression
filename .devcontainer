{
  "name": "Python Data Analysis",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "VARIANT": "3.9",
      "INSTALL_NODE": "false",
      "NODE_VERSION": "lts/*"
    }
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-toolsai.jupyter"
  ],
  "postCreateCommand": "pip install -r requirements.txt",
  "forwardPorts": [8888],
  "shutdownAction": "stopContainer"
}
